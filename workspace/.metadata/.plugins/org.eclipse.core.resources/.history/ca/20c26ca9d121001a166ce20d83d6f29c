package com.techelevator.sociemoti.summary;


import java.util.ArrayList;
import java.util.List;

import javax.sql.DataSource;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.jdbc.support.rowset.SqlRowSet;
import org.springframework.stereotype.Component;

@Component
public class JDBCSummaryDAO implements SummaryDAO {
	
	private JdbcTemplate jdbcTemplate;
	
	@Autowired
	public JDBCSummaryDAO(DataSource dataSource) {
		jdbcTemplate = new JdbcTemplate(dataSource);
	}

	@Override
	public List<Summary> listSummaryByStudentId(int studentId) {
		String selectSQL = "SELECT student_id, user_name, scenario_name, frame_story, img_name, face_state, choice_text " + 
		"FROM play_history " +
		"WHERE student_id = ?";
		SqlRowSet rows = jdbcTemplate.queryForRowSet(selectSQL, studentId);
		
		List<Summary> summary = new ArrayList<Summary>();
		while(rows.next()) {
			summary.add(mapRowToSummaryByStudentId(rows));
		}
		return summary;
	}
	
	@Override
	public void createSummary(Summary summary) {
		String sqlInsertSummary = "INSERT INTO play_history (id, student_id, user_name, scenario_name, frame_story, img_name, face_state, choice_text) " + 
				"VALUES (DEFAULT, ?, ?, ?, ?, ?, ?, ?)";
		jdbcTemplate.update(sqlInsertSummary, )
		
	}

	private Summary mapRowToSummaryByStudentId(SqlRowSet rows) {
		Summary summary = new Summary();
		
		summary.setStudentId(rows.getLong("student_id"));
		summary.setUserName(rows.getString("user_name"));
		summary.setScenarioName(rows.getString("scenario_name"));
		summary.setFrameVerbiage(rows.getString("frame_story"));
		summary.setImageName(rows.getString("img_name"));
		summary.setFaceState(rows.getString("face_state"));
		summary.setChoiceText(rows.getString("choice_text"));
		
		
		return summary;
	}
}
